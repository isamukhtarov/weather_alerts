version: '3'
services:
    # PHP Service
    app:
        build:
            context: .
            dockerfile: Dockerfile
        image: php:8.2-fpm
        container_name: app
        restart: unless-stopped
        tty: true
        environment:
            SERVICE_NAME: app
            SERVICE_TAGS: dev
        working_dir: /var/www/weather-alerts
        volumes:
            - ./:/var/www/weather-alerts
        ports:
            - "9000:9000"
        command: >
            sh -c "chmod +x /var/www/weather-alerts/entrypoint.sh && /var/www/weather-alerts/entrypoint.sh"
        networks:
            - app-network
<<<<<<< HEAD
=======
        depends_on:
            - db
>>>>>>> master

    # Nginx Service
    webserver:
        image: nginx:alpine
        container_name: webserver
        restart: unless-stopped
        tty: true
        ports:
            - "${DOCKER_WEB_PORT:-10080}:80"
            - "443:443"
        volumes:
            - ./:/var/www/weather-alerts
            - ./docker/nginx/conf.d:/etc/nginx/conf.d
        networks:
            - app-network

    # MySQL Service
    db:
        image: mysql:8.0.29
        volumes:
            - ./docker/mysql/my.cnf:/etc/mysql/my.cnf
            - ./docker/data/mysql:/var/lib/mysql
        container_name: db8.0.29
        restart: unless-stopped
        tty: true
        ports:
            - "${DOCKER_MYSQL_PORT:-13307}:3306"
        environment:
            MYSQL_DATABASE: ${DB_DATABASE:-weather-alerts}
            MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD:-root}
            MYSQL_PASSWORD: ${DB_PASSWORD:-root}
            MYSQL_USER: ${DB_USERNAME:-root}
        networks:
            - app-network
# Docker Networks
networks:
    app-network:
        driver: bridge
